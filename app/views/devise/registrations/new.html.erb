<div class="text-center p-100" >
	<div class="logo">Sign in</div>
	<!-- Main Form -->
	<div class="login-form-1">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
			<div class="main-login-form">
				<div class="login-group">
					<div class="form-group">
					  <div class="field">
              <%= f.text_field :username, autofocus: true, autocomplete: "username",class:"p-0 form-control",placeholder:"username" %>

						</div>
					</div>
					<div class="form-group">
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"mt-4 p-0 form-control",placeholder:"関学メールアドレス"%>
            </div>      
					</div>
					<div class="form-group">
            <div class="field">
              <% if @minimum_password_length %>
              <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password",class:"mt-3 p-0 form-control",placeholder:"password" %>
            </div>
					</div>
					<div class="form-group">
            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"mt-4 p-0 form-control",placeholder:"confirm password" %>
            </div>
					</div>
					<div class="form-group">
            <div class="field">
              <h5 class="mt-4"><%= f.label :アイコン %> </h5>
              <%= f.file_field :user_icon, id: 'upload-icon input-file'%>
              <p>(登録しない場合デフォルトアイコンになります。※後で変更可能)</p>
            </div>
            <div id="preview"></div>
					</div>
				</div>
				<div class="actions ">
		  		<%= button_tag '<i class="p-set fa fa-chevron-right indicate"></i>'.html_safe,:type => "submit" ,class:"actionsbtn login-button" %>
        </div>
			</div>
			<div class="etc-login-form">
        <%= render "devise/shared/links" %>
			</div>
		<% end %>
	</div>
	<!-- end:Main Form -->
</div>

