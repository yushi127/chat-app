<!DOCTYPE html>
<html>
  <head>
    <title>ChatApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
  </head>

  <body>

    <div class="allbackground m-0">
      <div class="bg-mask bottmpad">
        <%= yield %>
        <% if user_signed_in? %>
          
        <footer>
          <div class="blue text-center fixed-bottom p-2">
            <ul class="d-flex justify-content-around m-0 p-1" style="list-style:none;">
              <li><%= link_to 'All Room' , root_path, class: "text-dark" %></li>
              <li><%= link_to 'myroom' , myrooms_path, class: "text-dark" %></li>
              <li><%= link_to 'setting' , setting_path, class: "text-dark" %></li>
            </ul>
          </div>
        </footer>
        <% end %>
      </div>
    </div>
  </body>
</html>
