  <h1 class="pl-5 px-2 pt-0 mb-1 text-white">My  room</h1>
  <h3 class="pl-5 px-2 pt-0 mb-1 text-white">search</h3>
  <div class="search-form">
    <div class="pl-5">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword, class: "formboxcss" %>
        <%= f.submit "search", class: "formbtmcss" %>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-around flex-wrap text-center w-100 p-3">
  <!--この下のDIVを＜％％＞で囲ってforin的なもので回してその数出てくるようにする（何個作っても二列以上にならんように設定）-->
    <% @rooms.each do |room| %>
      <div class="with45set m-2 color-skyblue rounded parent py-2">
        <div class="p-5">
          <h2 class="m-2"><%= link_to room[2] , chatroom_path(room), class: "text-dark" %></h2>
          <p class="m-2">作成者：<%= room[1] %></p>
          <p class="m-2 ">作成日：<%= room[3] %></p>
          <span><%= link_to 'Delete' , myroom_path(room), method: :delete, data:{ confirm: "本当に#{room[2]}を消去してよろしいですか？"},class: "text-dark child mr-5 mb-4" %></span>
        </div>
      </div>
    <% end %>
  </div>


  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead class="thead-light" >
          <tr>
            <th>ID</th>
            <th>userid</th>
            <th>roomid</th>
          </tr>
        </thead>
        <tbody>
          <% @rooms.each do |relation| %>
            <tr>
              <td><%= relation[0] %></td>
              <td><%= relation[1] %></td>
              <td><%= relation[2] %></td>
              <td><%= relation[3] %></td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
